<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="2dp"
    android:paddingTop="2dp"
    android:background="@drawable/bg_tag_item"
    android:backgroundTint="@color/pink_500"
    android:id="@+id/rlTagBackground"
    android:layout_margin="3dp">

    <TextView
        android:id="@+id/tvTagName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="House work"
        android:layout_centerVertical="true"
        style="@style/NormalTextStyle"
        />

    <ImageView
        android:id="@+id/btnDeleteTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_toEndOf="@id/tvTagName"
        android:layout_centerVertical="true"
        />
</RelativeLayout>