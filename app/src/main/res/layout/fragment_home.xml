<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.mainhome.HomeActivity">

    <include
        android:id="@+id/lToolbar"
        layout="@layout/layout_toolbar"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbCreateTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorAntiAccent"
        android:src="@drawable/ic_add_black_24dp"
        />

    <com.haibin.calendarview.CalendarLayout
        android:id="@+id/layoutCalendarMainHome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/lToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        app:default_status="shrink"
        app:calendar_content_view_id="@+id/recyclerView">
        <com.haibin.calendarview.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"
            app:month_view="com.truongkhanh.supernote.customcalendarview.CalendarMonthView"
            app:week_view="com.truongkhanh.supernote.customcalendarview.CalendarWeekView"
            app:month_view_show_mode="mode_all" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGray"
            tools:listitem="@layout/item_simple_todo"
            />
    </com.haibin.calendarview.CalendarLayout>


</androidx.constraintlayout.widget.ConstraintLayout>