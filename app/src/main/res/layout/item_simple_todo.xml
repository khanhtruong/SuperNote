<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@color/colorDark">

    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvSeparate"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="14sp"
        android:textColor="@color/colorWhiteGray"
        android:fontFamily="@font/lato_regular"
        />
    <TextView
        android:id="@+id/tvSeparate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvStartTime"
        app:layout_constraintBottom_toTopOf="@id/tvEndTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/barrierTodoItem"
        android:text="@string/lbl_separate_time"
        android:fontFamily="@font/lato_regular"
        android:textSize="14sp"
        android:textColor="@color/colorWhiteGray"
        />
    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSeparate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="14sp"
        android:textColor="@color/colorWhiteGray"
        android:fontFamily="@font/lato_regular"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierTodoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:barrierDirection="end"
        app:constraint_referenced_ids="tvStartTime,tvEndTime,tvSeparate"
        />

    <RelativeLayout
        android:id="@+id/btnPriority"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/barrierTodoItem"
        android:background="@drawable/circle_white_gray"
        >
        <TextView
            android:id="@+id/tvPriority"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:fontFamily="@font/lato_semibold"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/colorDark"
            android:text="9"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvTodoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvTodoDescription"
        app:layout_constraintStart_toEndOf="@id/btnPriority"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/colorWhiteGray"
        android:textSize="18sp"
        android:text="@string/lbl_todo_title"
        />

    <TextView
        android:id="@+id/tvTodoDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/btnPriority"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTodoTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/lbl_description"
        android:fontFamily="@font/lato_regular"
        android:textSize="16sp"
        android:textColor="@color/grey_500"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvEndTime"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="2dp"
        android:background="@color/colorDarkGray"
        />

</androidx.constraintlayout.widget.ConstraintLayout>